generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma" //output decides where you import your prisma client from
}

datasource db {
  provider = "postgresql"
}


model User {
  id Int   @id @default(autoincrement()) //the unique primary key here is a number
  username String  
  password String @unique
  created_at DateTime @default(now())
  bookings Booking[] //stating that it has somem properties related to another model too

}

model Booking {
  id Int @id @unique @default(autoincrement()) //the unique primary key here is a string
  user User @relation(fields: [user_id], references: [id]) //declares that user_id has its property derived from 'id' in User model

  user_id Int  //this shouldnt be unique because one user_id can have many bookings
  car_name String
  days Int
  rent_per_day Int
  status Status @default(booked) //status-booked by default
  created_at DateTime @default(now())
}

enum Status {
  booked
  completed
  cancelled

}